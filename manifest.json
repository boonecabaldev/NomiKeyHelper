{
  "manifest_version": 3,
  "name": "Nomi Key Helper",
  "version": "1.0",
  "description": "Enhanced text editor with toggle functionality (Ctrl+M)",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Toggle extension functionality"
    }
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_title": "Toggle Nomi Key Helper"
  }
}